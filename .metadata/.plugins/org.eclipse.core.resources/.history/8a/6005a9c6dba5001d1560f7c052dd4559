<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>
	<style type="text/css">
		div{
			width: 300px;
			height: 300px;
			background-color: lime;
		}
		div>div{
			width: 200px;
			height: 200px;
			background-color: aqua;
		}
		div>div>div{
			width: 100px;
			height: 100px;
			background-color: red;
		}
	</style>
	<script type="text/javascript">
		var div1, div2, div3;
		window.onload=function(){
			div1=document.querySelector('div');
			div2=document.querySelector('div>div');
			div3=document.querySelector('div>div>div');
			
			
			//useCapture false = 자식 ---> 부모
			// ex) div3 클릭 시 box3, box2, box1 순서
			//useCapture true = 부모 ---> 자식
			// ex) div3 클릭 시 box1, box2, box3 순서
			div1.addEventListener('click',function(e){
				e.stopPropagation();
				console.log('box1');
			},true);
			div2.addEventListener('click',function(e){
				e.stopPropagation();
				console.log('box2');
			},true);
			div3.addEventListener('click',function(e){
				e.stopPropagation();
				console.log('box3');
			},true);
		}
	</script>
</head>
<body>
	<div>
		<div>
			<div></div>
		</div>
	</div>
</body>
</html>