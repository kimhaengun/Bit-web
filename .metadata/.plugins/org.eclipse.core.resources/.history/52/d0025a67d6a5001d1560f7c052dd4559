<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>Insert title here</title>
<script type="text/javascript">
	var btn, btn2, btn3, btn4;
	window.onload=function(){
		btn=document.querySelector("button");
		btn2=document.querySelector("button+button");
		btn3=document.querySelector("button+button+button");
		btn4=document.querySelector("button+button+button+button");
		//Event 종류
		//on만빼라... ex)click, dbclick~~~
		//DOM level 2 vs DOM level 3 차이점 ??
		// 2 = 메소드를 덮어씌워지기 때문에 이벤트 하나만 발생 
		/*
		btn.onclick = function(){
			console.log('level2 event...');
		};
		btn.onclick=function(){
			alert('클릭');
		}
		*/
		// 3 = 이벤트를 한번에 여러 이벤트 처리 가능
		var callback=function(){
			console.log('level3 event..');
		}
		var callback2=function(){
			alert('클릭');
		}
		//callback이 같으면 한번만 처리함
		btn.onclick=function(){console.log('event');};
		btn.addEventListener('click',callback);//(Event이름,callback)
		//btn.addEventListener('click',callback2);//(Event이름,callback)
		btn.addEventListener('click',callback2);//(Event이름,callback)
		//evnet 지우기
		//btn.removeEventListener('click',callback2);
		btn2.addEventListener('click',function(){
			btn.removeEventListener('click',callback2);
		});
		btn3.addEventListener('click',function(){
			btn.addEventListener('click',callback2);
		});
	}
</script>
</head>
<body>
	<h1>DOM level3 event</h1>
	<button>버튼1</button>
	<button>버튼2</button>
	<button>버튼3</button>
	<button>버튼4</button>
</body>
</html>