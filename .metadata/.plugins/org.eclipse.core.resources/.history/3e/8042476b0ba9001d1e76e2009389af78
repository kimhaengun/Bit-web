<script type="text/javascript" src="../js/jquery-1.12.4.min.js"></script>
<script type="text/javascript" src="../js/menu.js"></script>
<script type="text/javascript">
	var listLoading=function(){
		// **JSON으로 get요청 받는 방법**
		// 1."json"으로 받을 거라 선언
		// 2. getJSON으로 get요청 JSON으로 받을 거라 선언
		$.get('emp.json', function(data){
			console.log(typeof data, data);
			data.emp.forEach(
				function(ele){
					$('<tr/>')
						.append($('<td/>').html('<a href="emp.html?cmpno='+ele.empno+'">'+ele.empno+'</a>'))
						.append($('<td/>').html('<a href="emp.html?cmpno='+ele.empno+'">'+ele.ename+'</a>'))
						.append($('<td/>').html('<a href="emp.html?cmpno='+ele.empno+'">'+ele.hiredate.substring(0,10)+'</a>'))
						.append($('<td/>').html('<a href="emp.html?cmpno='+ele.empno+'">'+ele.sal+'</a>'))
						.appendTo('tbody');
				}		
			);
		},"json");
	}
	
	$(function(){
		listLoading();
	})
</script>
